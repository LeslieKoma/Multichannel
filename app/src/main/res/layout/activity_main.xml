<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="baseUrl:"
            android:id="@+id/tv_base_url"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hihi"
            app:layout_constraintTop_toTopOf="@id/tv_base_url"
            android:id="@+id/tv_base_url_"
            app:layout_constraintLeft_toRightOf="@id/tv_base_url"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="appname:"
            android:id="@+id/tv_app_name"
            app:layout_constraintTop_toBottomOf="@id/tv_base_url"
            android:layout_marginTop="20dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="hihi"
            app:layout_constraintTop_toTopOf="@id/tv_app_name"
            android:id="@+id/tv_app_name_"
            app:layout_constraintLeft_toRightOf="@id/tv_app_name"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="logo"
            android:id="@+id/img"
            android:layout_marginTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_app_name"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintLeft_toRightOf="@id/img"
            tools:src="@mipmap/ic_launcher_round"
    />


</android.support.constraint.ConstraintLayout>